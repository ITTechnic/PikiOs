#!/bin/sh
set -e

IFACE=$1

if grep -q "^\s*iface $IFACE-pikios " /boot/pikios-network.txt
then
	echo "$IFACE-pikios"
	echo "Using /boot/pikios-network.txt for configuring $IFACE..." >> /var/log/map_iface.log
else
	echo "$IFACE-raspbian"
	echo "Using original Raspbian configuration for configuring $IFACE..." >> /var/log/map_iface.log
fi
